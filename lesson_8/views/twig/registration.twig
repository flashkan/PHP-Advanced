{% extends 'layouts/main.twig' %}

{% block title %}Пользователи{% endblock %}

{% block body %}
    <form action="/user/newUser" method="post" class="row">
        <div class="form-group col-4">
            <label for="userName">Имя</label>
            <input name="userName" type="text" class="form-control" id="userName" placeholder="Имя">
        </div>
        <div class="form-group col-4">
            <label for="userLogin">Логин</label>
            <input name="userLogin" type="text" class="form-control" id="userLogin" placeholder="Логин">
        </div>
        <div class="form-group col-4">
            <label for="userPhone">Номер телефона</label>
            <input name="userPhone" type="text" class="form-control" id="userPhone" placeholder="Номер телефона">
        </div>
        <div class="form-group col-4">
            <label for="userPass">Пароль</label>
            <input name="userPassword" type="password" class="form-control" id="userPass" placeholder="Пароль">
        </div>
        <div class="form-group col-4">
            <label for="userPass2">Повторить пароль</label>
            <input name="userPassword2" type="password" class="form-control" id="userPass2" placeholder="Повторить пароль">
        </div>
        <div class="form-group col-4">
            <label for="userEmail">E-mail</label>
            <input name="userEmail" type="email" class="form-control" id="userEmail" placeholder="E-mail">
        </div>
        <div class="col-12 d-flex justify-content-center">
            <button type="submit" class="col-12 btn btn-primary">Зарагистрироваться</button>
        </div>
    </form>
{% endblock %}